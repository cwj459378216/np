{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "启动 Angular",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/web-client",
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-l", "-c"]
                }
            },
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "bundle generation complete"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}